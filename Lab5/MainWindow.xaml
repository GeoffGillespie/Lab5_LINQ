<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="Northwind Queries Lab!" Height="800" Width="1500">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="ToolBar">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <!-- Style for query buttons in the toolbar -->
        <Style x:Key="QueryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D8CFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#66000000" Direction="320" ShadowDepth="2" Opacity="0.6" BlurRadius="6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderBrush="#22000000" 
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Northwind Queries Lab!" Margin="10"/>

        <ToolBar Grid.Row="1">
            <Button Style="{StaticResource QueryButtonStyle}" 
                    Content="Query 1" Click="Query1_Click" 
                    ToolTip="{Binding QueryDescription}"/>
            <Button Style="{StaticResource QueryButtonStyle}" 
                    Content="Query 2" Click="Query2_Click" 
                    ToolTip="{Binding QueryDescription}"/>
            <Button Style="{StaticResource QueryButtonStyle}" 
                    Content="Query 3" Click="Query3_Click" 
                    ToolTip="{Binding QueryDescription}"/>
            <Button Style="{StaticResource QueryButtonStyle}" 
                    Content="Query 4" Click="Query4_Click" 
                    ToolTip="{Binding QueryDescription}"/>
            <Button Style="{StaticResource QueryButtonStyle}" 
                    Content="Query 5" Click="Query5_Click" 
                    ToolTip="{Binding QueryDescription}"/>
            <Button Style="{StaticResource QueryButtonStyle}" 
                    Content="Query 6" Click="Query6_Click" 
                    ToolTip="{Binding QueryDescription}"/>
            <Button Style="{StaticResource QueryButtonStyle}" 
                    Content="Query 7" Click="Query7_Click" 
                    ToolTip="{Binding QueryDescription}"/>
            <Button Style="{StaticResource QueryButtonStyle}" 
                    Content="Query 8" Click="Query8_Click" 
                    ToolTip="{Binding QueryDescription}"/>
            <Button Style="{StaticResource QueryButtonStyle}" 
                    Content="Query 9" Click="Query9_Click" 
                    ToolTip="{Binding QueryDescription}"/>
            <Button Style="{StaticResource QueryButtonStyle}" 
                    Content="Query 10" Click="Query10_Click" 
                    ToolTip="{Binding QueryDescription}"/>
        </ToolBar>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Query Results:" FontWeight="Bold" FontSize="20" Margin="10"/>
            <TextBlock Text="{Binding QueryDescription}" FontWeight="Regular" FontSize="20" Margin="10"/>
        </StackPanel>
        <DataGrid Grid.Row="3" x:Name="ResultsDataGrid"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  Margin="10"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
